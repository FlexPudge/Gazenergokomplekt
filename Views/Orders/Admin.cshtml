@{
    ViewData["Title"] = "Admin";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta />
    <title>Газэнергокомплект</title>
</head>
<body>
    <div class="container" style="margin-top:55px;">

        <!-- content содержит содержимое формы -->
        <!-- Правая колонка: сама форма -->
        <div class="right-side">

            <!-- Заголовок для формы -->
            <div class="topic-text" style="color:black;">Авторизация</div>

            <form action="/Orders/Check" class="contact-form" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Login" id="Login" name="Login">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" id="Password" name="Password">
                </div>
                <div class="form-group">
                    <button id="button_signIn" type="submit" class="form-control submit px-3">Продолжить</button>
                </div>
            </form>


            <form action="/Admins/Create" class="contact-form" method="post">
                <div class="form-group">
                    <button id="button_signUp" type="submit" class="form-control submit px-3">Зарегистрироваться</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>